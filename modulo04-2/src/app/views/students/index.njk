{% extends "layout.njk" %}


{% block content %}
    <div class="card table-container">
        <div class="header">
            <a class="button" href="/students/create">New</a>
            <form action="/students" method="get">
                <input type="text" name="filter" placeholder="Filter by name or email">
                <button type="submit">Filter</button>
            </form>
        </div>
        <table width="100%">
            <thead>
                <tr>
                    <th>Student's Name</th>
                    <th>Email</th>
                    <th>School Grade</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for student in students %}
                    <tr>
                        <td>
                            <span style="background-image: url({{ student.avatar_url }})"></span>
                            {{ student.name }}
                        </td>
                        <td>{{ student.email}}</td>
                        <td>{{ student.school_grade}}</td>
                        <td><a href="/students/{{ student.id }}">more</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <div class="pagination" data-page = {{pagination.page}} data-total = {{pagination.total}} data-filter={{filter}}>
        </div>
    </div>
{% endblock content %}