
<div class="item">
    <div>Avatar URL</div>
    <div>
        <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://" 
            value="{{ student.avatar_url }}">
    </div>
</div>
<div class="item">
    <div>Student</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="Full Name"
            value="{{ student.name }}"></div>
</div>
<div class="item">
    <div>Email</div>
    <div>
        <input 
            type="email" 
            name="email" 
            placeholder="student's email"
            value="{{ student.email }}"></div>
</div>
<div class="item">
    <div>Date of Birth</div>
    <div>
        <input 
            type="date" 
            name="dob"
            value="{{ student.dob }}"></div>
</div>
<div class="item">
    <div>School Grade</div>
    <div>
        <select name="school_grade">
            <option value="3EM" {% if student.school_grade =="EM" %} selected {% endif %}>
                3º ano do ensino médio
            </option>
            <option value="2EM" {% if student.school_grade =="2EM" %} selected {% endif %}>
                2º ano do ensino médio
            </option>
            <option value="1EM" {% if student.school_grade =="1EM" %} selected {% endif %}>
                1º ano do ensino médio
            </option>
            <option value="8EF" {% if student.school_grade =="8EF" %} selected {% endif %}>
                8º ano do ensino fundamental
            </option>
            <option value="7EF" {% if student.school_grade =="7EF" %} selected {% endif %}>
                7º ano do ensino fundamental
            </option>
            <option value="6EF" {% if student.school_grade =="6EF" %} selected {% endif %}>
                6º ano do ensino fundamental
            </option>
            <option value="5EF" {% if student.school_grade =="5EF" %} selected {% endif %}>
                5º ano do ensino fundamental
            </option>
        </select>
    </div>
</div>
<div class="item">
    <div>Weekly workload</div>
    <div>
        <input 
            type="number" 
            name="weekly_workload"
            value="{{ student.weekly_workload }}">
    </div>
</div>
<div class="item">
    <div>Teacher</div>
    <div>
        <select name="teacher">
        {% for teacher in teacherOptions %}
            <option value="{{teacher.id}}" {% if student.teacher_id == teacher.id %} selected {% endif %}>
                {{teacher.name}}
            </option>
        {% endfor %}    
        </select>
    </div>
</div>

<button type="submit">Save</button>