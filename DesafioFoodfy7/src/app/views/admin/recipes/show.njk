{% extends "layout_admin.njk" %}

{% block head %}
    <title>Editar Receita - Foodfy</title>
{% endblock %}

{% block bodyid %} id="manage-recipes" {% endblock %}

{% block content%}
    <section class="show">

        <div class="show header" id="show-header">
            <h1 class="page-title">Receita: {{item.title}}</h1>
            <a href="/admin/recipes/{{ item.id }}/edit" class="button">Editar Receita</a>
        </div>
        
        <div id="{{item.id}}" class="recipe-details">
            <img src="{{item.image}}" alt="{{item.title}}" class="img-recipe adjust-proportion">
            
            <h2 class="title-recipe">{{item.title}}</h2>
            <p class="author-recipe">por {{item.chef_name}}</p>
            
            <div class="ingridients-wrap wrapper">
                <div class="title">
                    <h3>Ingredientes</h3>
                    <div class="button">Esconder</div>
                </div>
                <ul class="ingredients button-content show">
                    {% for ingredient in item.ingredients %}
                        <li>{{ingredient}}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="preparation-wrap wrapper">
                <div class="title">
                    <h3>Modo de Preparo</h3>
                    <div class="button">Esconder</div>
                </div>
                <ol class="preparation button-content show">
                    {% for step in item.preparation %}
                        <li>{{step}}</li>
                    {% endfor %}
                </ol>
            </div>
            <div class="hints-wrap wrapper">
                <div class="title">
                    <h3>Informações adicionais</h3>
                    <div class="button">Esconder</div>
                </div>
                <p class="hints button-content show">{{item.information}}</p>
            </div>
            
        </div>
    </section>

    {% include 'pagination.njk' %}

{% endblock %}