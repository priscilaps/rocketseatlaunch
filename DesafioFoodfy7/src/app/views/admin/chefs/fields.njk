<button type="submit" class="button">Salvar Chef</button>
<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text" 
            name="name" 
            value="{{ chef.name }}">
    </div>
</div>
<div class="item">
    <div>Avatar</div>
        {% if (chef != null) %}
            <div id="photos-preview">
                        <div class="photo">
                            <input type="text" value="{{chef.avatar_url}}" id="{{chef.id}}">
                        </div>
            </div>
        {% endif %}
        <div id="photos-upload">
            <input 
                id="photos-input"
                type="file" 
                name="photos" 
                multiple
                accept="image/*"
                onchange="PhotosUpload.handleFileInput(event)"
            >
            <p>Enviar Avatar</p>
        </div>
</div>
<script src="/scripts.js"></script>