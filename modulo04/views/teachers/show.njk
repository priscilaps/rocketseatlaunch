{% extends "layout.njk" %}


{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover;"></section>
        <section class="details">
            <h3>Teacher's Details</h3>
            <div class="item">
                <div>Full Name</div>
                <div>{{ teacher.name }}</div>
            </div>
            <div class="item">
                <div>IdadeAge</div>
                <div>{{ teacher.age }}</div>
            </div>
            <div class="item">
                <div>Educational Level</div>
                <div>{{ teacher.educationLvl }}</div>
            </div>
            <div class="item">
                <div>Type of Class</div>
                <div>{{ "Presential" if teacher.typeOfClass == "P" else "Online"}}</div>
            </div>
            <div class="item">
                <div>Subjects</div>
                <div>
                    {% for subject in teacher.subjects %}
                    <span>{{ subject }}</span>
                    {% endfor %}                  
                </div>
            </div>
            <div class="item">
                <div>Since</div>
                <div>{{ teacher.created_at }}</div>
            </div>

            <a href="/teachers/{{ teacher.id }}/edit" class="button">Update</a>

        </section>
    </div>
{% endblock content %}