{% extends "layout.njk" %}

{% block head %}
    <title>Receitas - Foodfy</title>
{% endblock %}

{% block bodyid %} id="receitas" {% endblock %}

{% block content%}

    <section class="main-content">
        <div class="recipes">

            {% for item in items %}
                <div class="recipe" id="{{item.id}}">
                    <img src="{{item.image}}" alt="{{item.title}}" class="img-recipe">
                    <h2 class="title-recipe">{{item.title}}</h2>
                    <p class="author-recipe">por {{item.author}}</p>
                </div>
            {% endfor %}    

        </div>
    </section> 
    <script src="/scripts.js"></script>

{% endblock %}