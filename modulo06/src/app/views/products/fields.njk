<div class="item">
    <div>Categoria</div>
    <div>
        <select name="category_id" id="">
        {% for category in categories %}
            <option value="{{ category.id }}" {% if product.category_id == category.id %} selected {% endif %}>
                {{ category.name }}
            </option>
        {% endfor %}
        </select>
    </div>
</div>

<div class="item">
    <div>Nome</div>
    <div>
        <input 
            type="text" 
            name="name" 
            placeholder="digite o título do Anúncio"
            value="{{ product.name }}">
    </div>
</div>

<div class="item">
    <div>Descrição</div>
    <div>
        <textarea name="description" >{{ product.description }}</textarea>
    </div>
</div>

{# Campo de Foto #}    

<div class="item">
    <div>Valor</div>
    <div>
        <input 
            type="text" 
            name="price" 
            placeholder="Preço do Produto"
            value="{{ product.price }}"
            onkeydown="Mask.apply(this, 'formatBRL')"
            >
            {# faremos uma máscara de dinheiro/reais #}  
    </div>
    {% if product.old_price %}
        <input type="hidden" name="old_price" value={{product.old_price}}>
    {% endif %}
</div>

<div class="item">
    <div>Quantidade</div>
    <div>
        <input 
            type="number" 
            name="quantity" 
            placeholder="Estoque diponível"
            value="{{ product.quantity }}">
    </div>
</div>

{% if (product.status == '1' or product.status == '0') %}
    <div class="item">
        <div>Status</div>
        <span>
            <input 
                type="radio" 
                name="status" 
                placeholder="digite o título do Anúncio"
                value="1"
                {% if product.status == '1' %}
                    checked
                {% endif %}
                >Disponível
        </span>
        <span>
            <input 
                type="radio" 
                name="status" 
                placeholder="digite o título do Anúncio"
                value="0"
                {% if product.status == '0' %}
                    checked
                {% endif %}
                >Indisponível
        </span>
    </div>
 {% endif %}