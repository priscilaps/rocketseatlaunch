{% extends "layout.njk" %}

{% block head %}
    <title>Chef - Foodfy</title>
{% endblock %}

{% block bodyid %} id="chefs" {% endblock %}

{% block content%}
    <section class="main-content">
        <section class="show">

            <div class="header" id="chef-details-header">
                <h1 class="page-title">Chef: {{chef.name}}</h1>
            </div>

            <div class="chef-details">
                <div class="chef" id="{{chef.id}}">
                    <img src="{{chef.avatar_url}}" alt="{{chef.name}}" class="chef-avatar">
                    <h2 class="chef-name">{{chef.name}}</h2>
                    <p class="total-recipes">{{chef.total_recipes}} {{ "receitas" if chef.total_recipes != 1 else "receita" }}</p>
                </div> 
            </div>

            <div class="recipes-header">
                <h1 class="page-title">Receitas</h1>
                <div class="recipes">
                    
                    {% for item in items %}
                        <div class="recipe" id="{{item.id}}">
                            <div class="left">
                                <img src="{{item.image}}" alt="{{item.title}}" class="img-recipe">
                            </div>
                            <div class="rigth">
                                <h2 class="title-recipe">{{item.title}}</h2>
                                <p class="author-recipe">por {{item.chef_name}}</p>
                                <p class="view-recipe">
                                    <a href="/admin/recipe/{{ item.id }}" class="viewButton">Visualizar</a>
                                </p>
                            </div>
                        </div>
                    {% endfor %}  

                </div>

            </div>
        </section>
    </section>
        
    {% include 'pagination.njk' %}

    <script src="/scripts.js"></script>  

{% endblock %}