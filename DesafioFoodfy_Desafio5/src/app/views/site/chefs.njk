{% extends "layout.njk" %}

{% block head %}
    <title>Lista de Chefs - Foodfy</title>
{% endblock %}

{% block bodyid %} id="chefs" {% endblock %}

{% block content%}
    <section class="main-content">
        <section class="list">
            <div class="chefs">
                {% for item in items %}
                    <div class="chef" id="{{item.id}}">
                        <div class="left">
                            <img src="{{item.avatar_url}}" alt="{{item.name}}" class="chef-avatar">
                        </div>
                        <div class="rigth">
                            <h2 class="chef-name">{{item.name}}</h2>
                            <p class="total-recipes">{{item.total_recipes}} {{ "receitas" if item.total_recipes > 1 else "receita" }}</p>
                        </div>
                    </div>
                {% endfor %}    
            </div>
        </section>
    </section>
    
    {% include 'pagination.njk' %}

    <script src="/scripts.js"></script>    
{% endblock %}