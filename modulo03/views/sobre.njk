{% extends "layout.njk" %}

{% block head %}

    <title>Sobre - Priscila Sampaio</title>

{% endblock %}

{% block content %}
    <div class="wrapper">
        <img src="{{ about.avatar_url }}" alt="Foto de {{ about.name }}">
        <h1>{{ about.name }}</h1>
        <h2>{{ about.role }}</h2>
        <ul>
        {% for tecnologia in about.tecnologias %}
            <li>{{ tecnologia }}</li>
        {% endfor %}
        </ul>
        <div class="social">
        {% for link in about.links %}
            <a href="{{ link.url }}" target="_blank">{{ link.name }}</a>
        {% endfor %}
        </div>
    </div>
{% endblock %}